import java.io.*;
import java.util.*;

public class EmployeeDataHandler {
    private static final String FILE_NAME = "employees.csv";

    public static List<Employee> loadEmployeesFromCSV() {
        List<Employee> employees = new ArrayList<>();
        try (BufferedReader br = new BufferedReader(new FileReader(FILE_NAME))) {
            String line;
            while ((line = br.readLine()) != null) {
                String[] data = line.split(",");
                if (data.length == 7) {
                    Employee emp = new Employee(data[0], data[1], data[2], data[3], data[4], data[5], data[6]);
                    employees.add(emp);
                }
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
        return employees;
    }

    public static void updateEmployee(Employee updatedEmployee) {
        List<Employee> employees = loadEmployeesFromCSV();
        for (int i = 0; i < employees.size(); i++) {
            if (employees.get(i).getEmpNumber().equals(updatedEmployee.getEmpNumber())) {
                employees.set(i, updatedEmployee);
                break;
            }
        }
        saveAllEmployees(employees);
    }

    public static void deleteEmployee(String empNumber) {
        List<Employee> employees = loadEmployeesFromCSV();
        employees.removeIf(emp -> emp.getEmpNumber().equals(empNumber));
        saveAllEmployees(employees);
    }

    public static void saveAllEmployees(List<Employee> employees) {
        try (BufferedWriter bw = new BufferedWriter(new FileWriter(FILE_NAME))) {
            for (Employee emp : employees) {
                bw.write(emp.toCSV());
                bw.newLine();
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
